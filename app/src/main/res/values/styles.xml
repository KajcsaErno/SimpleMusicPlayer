<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#304FFE</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/text_view_padding</item>
        <item name="android:paddingEnd">@dimen/text_view_padding</item>
        <item name="android:paddingBottom">@dimen/text_view_big_padding</item>
    </style>

    <style name="songs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">@dimen/text_view_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/text_view_padding</item>
        <item name="android:paddingEnd">@dimen/text_view_padding</item>
        <item name="android:layout_marginTop">42dp</item>
    </style>

    <style name="albums">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_size</item>
        <item name="android:paddingStart">@dimen/text_view_padding</item>
        <item name="android:paddingEnd">@dimen/text_view_padding</item>
    </style>

    <style name="grid_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnWidth">@dimen/text_view_big_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/grind_view_margin</item>
        <item name="android:layout_marginBottom">@dimen/grind_view_margin</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:verticalSpacing">28dp</item>
    </style>

    <style name="grid_item_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/text_view_big_padding</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingStart">@dimen/text_view_small_padding</item>
        <item name="android:paddingEnd">@dimen/text_view_small_padding</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="grid_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/text_view_small_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="grid_item_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00FF00</item>
    </style>

    <style name="list_item_image">
        <item name="android:layout_width">@dimen/list_item_dimension</item>
        <item name="android:layout_height">@dimen/list_item_dimension</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingEnd">@dimen/text_view_small_padding</item>
        <item name="android:paddingStart">@dimen/text_view_small_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="list_item_song_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_artist_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="now_playing_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_marginLeft">@dimen/text_view_now_playing_margin</item>
        <item name="android:layout_marginRight">@dimen/text_view_now_playing_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="now_playing_song">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">@dimen/text_view_padding</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">38dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="now_playing_minus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="now_playing_like">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="now_playing_plus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="now_playing_seekbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/seekbar_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/seekbar_margin_top_bottom</item>
        <item name="android:layout_marginStart">@dimen/seekbar_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/seekbar_margin_start_end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">10</item>
    </style>

    <style name="now_playing_seekbar_begining">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignStart">@+id/seek_bar</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_small_size</item>
    </style>

    <style name="now_playing_seekbar_ending">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignStart">@+id/seek_bar</item>
        <item name="android:layout_marginStart">320dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_small_size</item>
    </style>

    <style name="now_playing_control_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="song_list">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">55dp</item>
    </style>

    <style name="footer_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="footer_text">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">@dimen/text_view_small_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_small_size</item>
    </style>

    <style name="footer_rewind">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/text_view_small_padding</item>
    </style>

    <style name="footer_play">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="footer_skip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/text_view_small_padding</item>
    </style>

    <style name="now_playing_artist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_view_small_size</item>
        <item name="android:paddingBottom">36dp</item>
    </style>

</resources>
