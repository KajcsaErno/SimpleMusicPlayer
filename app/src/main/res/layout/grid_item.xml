    xmlns:tools="http://schemas.android.com/tools"
    style="@style/grid_item_linear_layout"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/image_view"
        android:src="@drawable/note_24074_1280"
        style="@style/grid_item_image"
